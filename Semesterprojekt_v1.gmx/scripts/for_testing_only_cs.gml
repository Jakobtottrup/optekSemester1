player_view_id = 8;
switch (keyboard_key)   //sets player_view_id value to numpad input [0, 8}
    {
    case vk_numpad0: player_view_id = 0;  break;
    case vk_numpad1: player_view_id = 1;  break;    
    case vk_numpad2: player_view_id = 2;  break;
    case vk_numpad3: player_view_id = 3;  break;
    case vk_numpad4: player_view_id = 4;  break;
    case vk_numpad5: player_view_id = 5;  break;
    case vk_numpad6: player_view_id = 6;  break;
    case vk_numpad7: player_view_id = 7;  break;
    case vk_numpad8: player_view_id = 8;  break;
    }
